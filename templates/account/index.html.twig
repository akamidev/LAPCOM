{% extends 'base.html.twig' %}

{% block body %}

	<div class="container my-5">
		<h1>Espace membre</h1>
		<div class="row">
			<div class="col-md-3">
				{% include 'account/_menu.html.twig' %}
			</div>

			<div class="col-md-9">
				<h5>Mes dernières commandes</h5>
				{% if orders | length == 0 %}

					<div class="alert alert-info">
						Vous n'avez pas encore passé de commande.
					</div>

				{% else %}


					<table class="table table-hover">
						<thead>
							<tr>
								<th scope="col">N°</th>
								<th scope="col">Date</th>
								<th scope="col">Statut</th>
								<th scope="col">Total T.T.C</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>

							{% for order in orders %}

								<tr>
                <td>{{ order.id }}</td>
                <td>{{ order.createdAt |date('d/m/Y') }}</td>
               <td class="state-cell">{{ include('admin/state.html.twig', { field: { 'value': order.state }}) }}</td>
                <td>{{ order.totalWt |price }}</td>
                <td><a href="{{ path('app_account_order', {'id_order' : order.id }) }}">Voir</td>
                </tr>
							{% endfor %}


						</tbody>
					</table>
				{% endif %}
			</div>
		</div>
	</div>

{% endblock %}
