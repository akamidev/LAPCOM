{% if field.value == 1 %}
    <span class="badge badge-warning">En attente de paiement</span>
{% elseif field.value == 2 %}
    <span class="badge badge-primary">Paiement effectué</span>
{% elseif field.value == 3 %}
    <span class="badge badge-info">En cours de préparation</span>
{% elseif field.value == 4 %}
    <span class="badge badge-success">Expédiée</span>
{% elseif field.value == 5 %}
    <span class="badge badge-danger">Annulée</span>
{% endif %}