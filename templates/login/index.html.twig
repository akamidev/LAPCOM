{% extends 'base.html.twig' %}

{% block body %}
<div class="vh-100 d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <div class="card border-0 shadow">
            <div class="card-header text-center bg-dark text-white">
                Connexion
            </div>
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('app_login') }}" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Votre email</label>
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Votre mot de passe</label>
                        <input class="form-control" type="password" id="password" name="_password" required>
                    </div>

                    <input type="hidden" name="_target_path" value="{{ path('app_account') }}">

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark mt-3">Me connecter</button>
                    </div>
                </form>
                <div class="mt-3 text-center">
                    Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a>
                </div>
                <div class="mt-3 text-center">
                    <a href="{{ path('app_password') }}">Mot de passe oubli√© ?</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
