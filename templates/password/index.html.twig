{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-3">Mot de passe oublié</h1>
            <div class="card">
                <div class="card-body">
                    <p class="card-text">Veuillez entrer votre adresse email ci-dessous pour recevoir les instructions de réinitialisation du mot de passe.</p>
                    {{ form_start(forgotPasswordForm, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_row(forgotPasswordForm.email, {'attr': {'class': 'form-control'}}) }}
                    <div class="mt-3">
                        {{ form_row(forgotPasswordForm.submit, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                    </div>
                    {{ form_end(forgotPasswordForm) }}
                </div>
            </div>
            <div class="mt-3 text-center">
                Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="text-primary">Connectez-vous</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
